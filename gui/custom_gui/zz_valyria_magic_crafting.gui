									fixedgridbox = {
										addcolumn = 300
										addrow = 55
										datamodel = "[GetPlayer.MakeScope.GetList('zz_valyria_item_list')]"
										item = {
											button_standard = {
												parentanchor = top|left
												datacontext = "[GetScriptedGui('zz_valyria_magic_item_selection')]"
												minimumsize = { 300 38 }
												text_single = {
													minimumsize = { 100 38 }
													margin = { 15 15 }
													text = "[Scope.GetFlagName]"
													alwaystransparent = yes
													resizeparent = yes
													align = center|nobaseline
													default_format = "#low"
												}
												datacontext = "[GetScriptedGui('zz_valyria_magic_item_selection')]"
												onclick = "[ScriptedGui.Execute( GuiScope.SetRoot( GetPlayer.MakeScope ).AddScope( 'zz_selected_item', MakeScopeFlag(Scope.GetFlagKey) ).End)]"
												down = "[ScriptedGui.IsShown( GuiScope.SetRoot( GetPlayer.MakeScope ).AddScope( 'zz_selected_item', MakeScopeFlag(Scope.GetFlagKey) ).End)]"
												enabled = "[ScriptedGui.IsValid( GuiScope.SetRoot( GetPlayer.MakeScope ).AddScope( 'zz_selected_item', MakeScopeFlag(Scope.GetFlagKey) ).End)]"
												tooltip = "[Localize(Concatenate(Scope.GetFlagKey, '_desc' ))]"
											}	
										}
									}
									expand = {}
								}
							}
							spacer = { size = { 0 10 } }
							expand = {}
							vbox = {
								text_single = {
									align = left
									raw_text = "[GetPlayer.MakeScope.Var('zz_selected_item').GetFlagName]"
								}
							}
							vbox = {
								layoutpolicy_horizontal = expanding 
								layoutpolicy_vertical = expanding
