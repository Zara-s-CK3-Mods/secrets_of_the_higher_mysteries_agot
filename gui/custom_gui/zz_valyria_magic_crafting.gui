							max_width = 400
							text_single = {
								raw_text = "Item Selection"
								fontsize = 24
								align = center
							}
							spacer = { size = { 0 30 } }
							scrollbox = {
								name = "item_scrollarea"
								layoutpolicy_vertical = expanding
								layoutpolicy_horizontal = expanding
								max_width = 350
								#max_height = 450
								blockoverride "scrollbox_content"
