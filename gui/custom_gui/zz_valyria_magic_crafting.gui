									layoutpolicy_horizontal = expanding
									layoutpolicy_vertical = expanding
									minimumsize = { 300 300 }
									max_width = 300
									min_width = 300
									autoresize = yes
									text = "[Localize(Concatenate(GetPlayer.MakeScope.Var('zz_selected_item').GetFlagKey, '_desc' ))]"
								}
							}
